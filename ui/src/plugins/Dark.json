{
  "injection": "$q.dark",

  "props": {
    "isActive": {
      "type": "Boolean",
      "desc": "Is Dark mode active?",
      "reactive": true
    }
  },

  "methods": {
    "set": {
      "desc": "Set dark mode status",
      "params": {
        "status": {
          "type": [ "Boolean", "String" ],
          "desc": "Dark mode status",
          "values": [ true, false, "auto" ],
          "required": true
        }
      }
    }
  }
}
