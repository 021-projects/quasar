.quasar-grid-table
  font-size $table-font-size
  color $table-color
  th
    user-select none
  .sortable-column
    cursor pointer

.grid-top-controls input
  width 150px

.grid-control-panel .quasar-select-container
    margin-left 10px

@media only screen and (max-width $layout-small-max)
  .grid-top-controls > div
    margin-bottom 1rem
  .grid-bottom-controls > div
    margin-top 1rem

  .quasar-grid-table
    table
      width 100%
    thead
      display none
    tbody
      td
        display block
        text-align left !important
        width 100% !important
        padding 7px 10px
        &:before
          content attr(data-th)
          display block
          text-align left
          font-weight bold
        &:first-of-type
          padding 15px 5px 5px !important
        &:last-of-type
          padding 5px 5px 15px !important

@media only screen and (min-width $layout-medium-min)
  .grid-top-controls
    margin-bottom 5px
  .grid-bottom-controls
    margin-top 5px
