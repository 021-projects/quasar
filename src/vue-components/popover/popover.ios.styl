$popover-background   ?= white
$popover-box-shadow   ?= $shadow-1

.quasar-popover
  display none
  position fixed
  box-shadow $popover-box-shadow
  background $popover-background
  z-index $z-popover
  overflow-y auto
  overflow-x hidden

  &.opened
    display block

  .list
    margin 0
    border 0
