.quasar-toggle
  input + div
    &:before
      border-radius $toggle-handle-size
      background-color white
      border $toggle-border-size solid $form-darker-color
    &:after
      box-shadow $form-shadow

  input:checked + div
    &:before
      background-color $form-active-color
      border $toggle-border-size solid $form-active-color

    &:after
      box-shadow $shadow-1
