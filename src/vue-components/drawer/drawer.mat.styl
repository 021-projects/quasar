$drawer-width           ?= 240px
$drawer-font-size       ?= 1rem
$drawer-icon-font-size  ?= 1.8rem
$drawer-background      ?= white

.drawer
  position relative
  overflow-y none
  .list
    margin 0

.drawer-backdrop
  display none
  z-index $z-drawer
  &.active
    display block

.drawer-opener
  z-index ($z-marginals + 1)
  height 100%
  width 15px

.drawer-content
  will-change transform
  background $drawer-background
  top 0
  bottom 0
  width $drawer-width
  font-size $drawer-font-size

  &.left-side
    left 0
  &.right-side
    right 0

.left-drawer-opener, .right-drawer-opener
  cursor pointer

.drawer-header
  overflow hidden
  position relative
  margin-bottom 8px
  padding 16px
  background-size 100% 100%, cover

  > img
    position absolute
    top 0
    bottom 0
    left -50%
    width 100%
    height 100%
    transform translateX(50%)
    z-index -1

  > div
    color white

  .avatar img
    height 64px
    width 64px
    margin-bottom 25px
    border-radius 50%

swipe-behavior()
  .drawer-content
    z-index $z-drawer
    position fixed
    &.left-side
      transform translateX(- $drawer-width)
    &.right-side
      transform translateX($drawer-width)

@media screen and (max-width: $layout-small-max)
  swipe-behavior()

@media screen and (min-width: $layout-medium-min)
  .left-drawer-opener, .right-drawer-opener
    &:not(.always-visible)
      display none !important
  .drawer
    &.swipe-only
      swipe-behavior()
    &:not(.swipe-only)
      flex 0 0 $drawer-width

      .drawer-content
        left 0
        right 0
        position absolute !important
        transform translateX(0) !important
