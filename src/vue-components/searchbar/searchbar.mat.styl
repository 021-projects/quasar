.quasar-searchbar
  padding 3px
  background inherit
  display flex
  align-items center
  width 100%

.quasar-searchbar-input-container
  position relative
  flex-shrink 1
  width 100%

.quasar-searchbar-icon, .quasar-searchbar-clear
  position absolute
  top 0
  padding 0
  margin 0
  min-height 0
  width 22px
  height 100%

.quasar-searchbar-icon
  left 16px
.quasar-searchbar-clear
  right 13px

.quasar-searchbar-input
  padding 0 55px
  height auto
  border-radius $generic-border-radius
  font-weight 400
  box-shadow $shadow-1
  width 100%
  border 0
  outline 0
  font-size 1rem
  line-height 38px
  background white
  transition all .2s ease

for $name, $color in $colors
  .toolbar.{$name} .quasar-searchbar-input
    background active-color($color)
    if $name != 'light'
      color white
      &::-webkit-input-placeholder
        color white
      &::-moz-placeholder
        color white
      &:-ms-input-placeholder
        color white

body.desktop .toolbar
  for $name, $color in $colors
    &.{$name} .quasar-searchbar-input:hover
      background light-active-color($color)
