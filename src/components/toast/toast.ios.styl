$toast-primary       ?= $secondary
$toast-secondary     ?= lighten($toast-primary, 20%)
$toast-border-radius ?= 7px

#__quasar_toasts
  position fixed
  z-index $z-toast

.quasar-toast
  opacity .9
  will-change transform
  color white
  background-color $toast-primary
  font-size 1rem
  border-radius $toast-border-radius

  a
    color $yellow

  img
    max-height 30px
    max-width 30px

  > div
    margin 5px

  > i
    font-size 1.5em
    line-height 1em

  .quasar-toast-dismiss-all
    display none
    font-size 1.5rem
    line-height 1rem
    padding 5px
    color $toast-primary
    margin-left .5rem
    border-radius 7px
    background-color $toast-secondary

  &:first-of-type
    .quasar-toast-dismiss-all
      display inherit

@media (max-width: $layout-small-max)
  #__quasar_toasts
    bottom 0
    left 0
    right 0

  .quasar-toast
    margin 0 5px 5px
    padding 10px 16px
    min-width 100%
    float left
    box-shadow none !important
    border-top 1px solid $toast-secondary

@media (min-width: $layout-medium-min)
  #__quasar_toasts
    pointer-events none
    top 60px
    left 25px
    right 25px

  .quasar-toast
    pointer-events all
    max-width $layout-medium-min
    min-width ($layout-medium-min / 2.5)
    padding 5px 16px
    margin 5px 16px 5px auto
    border 3px solid $toast-secondary
    box-shadow $shadow-3
