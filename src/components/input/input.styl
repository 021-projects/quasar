.q-textarea
  .q-field__control
    min-height 112px
    height auto

  .q-field__control-container
    padding-top 0

  .q-field__native, .q-field__prefix, .q-field__suffix
    line-height 18px

  &.q-field--labeled
    .q-field__control-container
      padding-top 28px
      padding-bottom 2px
    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 0
    .q-field__native
      min-height 26px

  &--autogrow
    .q-field__control, .q-field__native
      min-height 56px
    &.q-field--labeled .q-field__native
      height 26px

  &.q-field--dense
    .q-field__control, .q-field__native
      min-height 26px

    &.q-field--labeled
      .q-field__control-container
        padding-top 16px

    &.q-textarea--autogrow
      .q-field__control, .q-field__native
        min-height 18px
      .q-field__native
        height 40px
      &.q-field--labeled
        .q-field__control
          min-height 22px
        .q-field__native
          height 22px

