.q-card
  box-shadow $card-shadow
  vertical-align top

  > div:first-child
    border-top-left-radius inherit
    border-top-right-radius inherit
  > div:last-child
    border-bottom-left-radius inherit
    border-bottom-right-radius inherit

  &--bordered
    border 1px solid rgba(0, 0, 0, .12)

  &--dark
    color white
    border-color rgba(255, 255, 255, .48)

  &__section
    padding 16px

  &__actions
    padding 8px

    .q-btn
      padding 0 8px

    &--horiz
      .q-btn-item + .q-btn-item
        margin-left 8px
    &--vert
      .q-btn-item + .q-btn-item
        margin-top 4px

  &__section + &__section
    padding-top 0

  &__media
    overflow hidden

    > img
      display block
      width 100%
      max-width 100%
      border 0

    .q-card__section
      position absolute
      color white
      background $card-overlay-color

    &--top, &--full
      .q-card__section
        top 0
        left 0
        right 0
    &--bottom, &--full
      .q-card__section
        bottom 0
        left 0
        right 0
