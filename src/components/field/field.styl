$field-transition = .36s cubic-bezier(.4,0,.2,1)

.q-field

  &__marginal
    color rgba(0, 0, 0, .54)
    font-size 24px
    z-index 1
    transition color $field-transition

    > * + *
      margin-left 2px

  &__before, &__prepend
    padding-right 12px

  &__after, &__append
    padding-left 12px

  &__inner
    text-align left

  &__bottom
    font-size 11px
    line-height 1
    color rgba(0, 0, 0, .54)

    .q-field__control + &
      margin-top 8px

  &__messages
    word-break break-word
    word-wrap break-word
    overflow-wrap break-word
    line-height 1

  &__counter
    padding-left 8px
    line-height 1

  .q-avatar
    font-size 32px

  &--item-aligned
    padding 8px 16px

    .q-field__before
      min-width 56px

  &__control-container
    height inherit

  &__control
    color $primary

    &:before, &:after
      content ''
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      pointer-events none
    &:before
      border-radius inherit

  &__native, &__prefix, &__suffix
    font-weight 400
    font-size 14px
    line-height 28px
    letter-spacing .00937em
    text-decoration inherit
    text-transform inherit
    height 100%
    border none
    border-radius 0
    background none
    color rgba(0,0,0,.87)
    outline 0
    padding 0

  &__native
    width 100%
  &__prefix, &__suffix
    transition opacity $field-transition
  &__prefix
    padding-right 4px
  &__suffix
    padding-left 4px

  &__label
    right auto
    bottom 20px
    color rgba(0,0,0,.6)
    font-size 16px
    line-height 18px
    font-weight 400
    letter-spacing .00937em
    text-decoration inherit
    text-transform inherit
    transform-origin left top
    transition transform $field-transition, color $field-transition

  &--float
    .q-field__label
      transform translate3d(0, -50%, 0) scale3d(.75, .75, .75)

  &--focused
    .q-field__label
      color currentColor

  &--filled

    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 6px
      padding-bottom 6px

    .q-field__control, .q-field__marginal
      height 56px

    .q-field__control
      padding 0 12px
      background #f5f5f5
      border-radius $generic-border-radius $generic-border-radius 0 0

      &:before
        background rgba(0,0,0,.05)
        border-bottom 1px solid rgba(0,0,0,.42)
        opacity 0
        transition opacity $field-transition, background $field-transition

      &:hover:before
        opacity 1

      &:after
        height 2px
        top unset
        transform-origin center bottom
        transform scale3d(0, 1, 1)
        background currentColor
        transition transform .24s cubic-bezier(.4,0,.2,1)

    &.q-field--rounded .q-field__control
      border-radius 28px 28px 0 0

    &.q-field--focused
      .q-field__control
        &:before
          opacity 1
          background rgba(0,0,0,.12)
        &:after
          transform scale3d(1, 1, 1)

    &.q-field--disable
      .q-field__control:before
        border-bottom-style dashed

    .q-field__bottom
      padding 0 12px

    &.q-field--dense
      .q-field__control, .q-field__marginal
        height 40px
      .q-field__control
        padding 0 6px
      .q-field__bottom
        padding 0 4px

  &--outlined

    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 6px
      padding-bottom 6px
      height inherit

    .q-field__control, .q-field__marginal
      height 56px

    .q-field__control
      border-radius $generic-border-radius
      padding 0 12px

      &:before
        border 1px solid rgba(0,0,0,.24)
        transition border-color $field-transition
      &:hover:before
        border-color black

      &:after
        height inherit
        border-radius inherit
        border 2px solid transparent
        transition border-color $field-transition

    &.q-field--rounded .q-field__control
      border-radius 28px

    &.q-field--focused
      .q-field__control:after
        border-color currentColor
        border-width 2px
        transform scale3d(1, 1, 1)

    &.q-field--disable
      .q-field__control:before
        border-style dashed

    .q-field__bottom
      padding 0 12px

    &.q-field--dense
      .q-field__control, .q-field__marginal
        height 40px
      .q-field__control
        padding 0 6px
      .q-field__bottom
        padding 0 4px

  &--borderless

    .q-field__control, .q-field__marginal
      height 56px

    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 6px
      padding-bottom 6px

    &.q-field--dense
      .q-field__control, .q-field__marginal
        height 40px

  &--standard

    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 4px
      padding-bottom 4px

    &.q-field--labeled
      .q-field__control, .q-field__marginal
        height 46px
      .q-field__native, .q-field__prefix, .q-field__suffix
        padding-top 16px
        padding-bottom 6px

    .q-field__label
      bottom 14px

    &.q-field--float
      .q-field__label
        transform translate3d(0, -70%, 0) scale3d(.75, .75, .75)

    .q-field__control, .q-field__marginal
      height 32px

    .q-field__control
      &:before
        border-bottom 1px solid rgba(0,0,0,.24)
        transition border-color $field-transition

      &:hover:before
        border-color black

      &:after
        height 2px
        top unset
        border-bottom-left-radius inherit
        border-bottom-right-radius inherit
        transform-origin center bottom
        transform scale3d(0, 1, 1)
        background currentColor
        transition transform .24s cubic-bezier(.4,0,.2,1)

    &.q-field--focused
      .q-field__control:after
        transform scale3d(1, 1, 1)

    &.q-field--disable
      .q-field__control:before
        border-bottom-style dashed

    &.q-field--dense
      &.q-field--labeled
        .q-field__control, .q-field__marginal
          height 40px
        .q-field__native, .q-field__prefix, .q-field__suffix
          padding-top 13px
          padding-bottom 6px

  &--dark
    &.q-field--filled .q-field__control
      background #222

    .q-field__control:before
      border-color rgba(255, 255, 255, .6)

    .q-field__control:hover:before
      border-color white

    .q-field__native, .q-field__prefix, .q-field__suffix
      color white

    &:not(.q-field--focused) .q-field__label, .q-field__marginal, .q-field__bottom
      color rgba(255, 255, 255, .7)

  &--standout

    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 6px
      padding-bottom 6px

    .q-field__control, .q-field__marginal
      height 56px

    .q-field__control
      padding 0 12px
      background rgba(0,0,0,.05)
      border-radius $generic-border-radius
      transition box-shadow $field-transition

      &:before
        background rgba(0,0,0,.07)
        opacity 0
        transition opacity $field-transition, background $field-transition

      &:hover:before
        opacity 1

    &.q-field--rounded .q-field__control
      border-radius 28px

    &.q-field--focused
      .q-field__control
        box-shadow $shadow-2
        &:before
          opacity 1
          background black
      .q-field__native, .q-field__prefix, .q-field__suffix, .q-field__prepend, .q-field__append
        color white

    .q-field__bottom
      padding 0 12px

    &.q-field--dark
      .q-field__control
        background rgba(255, 255, 255, .07)
        &:before
          background rgba(255, 255, 255, .07)
      &.q-field--focused
        .q-field__control
          &:before
            opacity 1
            background white
        .q-field__native, .q-field__prefix, .q-field__suffix, .q-field__prepend, .q-field__append
          color black

    &.q-field--dense
      .q-field__control, .q-field__marginal
        height 40px
      .q-field__control
        padding 0 6px
      .q-field__bottom
        padding 0 4px

  &--labeled
    .q-field__native, .q-field__prefix, .q-field__suffix
      padding-top 20px
      padding-bottom 4px

    &:not(.q-field--float)
      .q-field__prefix, .q-field__suffix
        opacity 0

    &:not(.q-field--focused) .q-field__native

      &::-webkit-input-placeholder
        color transparent

      &::-moz-placeholder
        color transparent

      &:-ms-input-placeholder
        color transparent

    &.q-field--dense
      .q-field__native, .q-field__prefix, .q-field__suffix
        padding-top 12px
        padding-bottom 3px

  &--dense
    .q-field__label
      font-size 14px
      bottom 11px
    .q-field__before, .q-field__prepend
      padding-right 6px
    .q-field__after, .q-field__append
      padding-left 6px
    .q-field__control + .q-field__bottom
      margin-top 4px

    .q-avatar
      font-size 24px
