.q-date
  display inline-flex
  box-shadow $shadow-2
  border-radius $generic-border-radius
  background white
  max-width 100%

  .q-btn
    font-weight normal

  &__header
    border-top-left-radius inherit
    color white
    background $primary
    padding 16px

  &__header-link
    opacity .64
    transition opacity .3s ease-out
    &--active
      opacity 1

  &__header-subtitle
    font-size 14px
    line-height 1.75
    letter-spacing 0.00938em

  &__header-title-label
    font-size 24px
    line-height 1.2
    letter-spacing 0.00735em

  &__view
    height 100%
    width 100%
    min-width 290px
    min-height 324px
    padding 16px

  &__navigation
    height 12.5%

    > div:first-child
      width 8%
      justify-content flex-end
    > div:last-child
      width 8%
      justify-content flex-start

  &__calendar-weekdays
    height 12.5%
    > div
      opacity .52
      font-size 12px

  &__calendar-item
    display inline-flex
    align-items center
    justify-content center
    vertical-align middle
    width 14.285% !important
    height 12.5% !important
    position relative

    > div, button
      width 32px
      height 32px
    > div
      line-height 32px
      text-align center

    &--out
      opacity .24

  &__calendar-days > div
    height 16.66% !important

  &__years-content
    padding 0 8px

  &--portrait
    flex-direction column
    height 410px
    width 290px

    .q-date__header
      border-top-right-radius inherit
    .q-date__header-title
      align-items center

  &--landscape
    flex-direction row
    align-items stretch
    height 321px
    width 420px

    > div
      display flex
      flex-direction column
      justify-content center

    .q-date__content
      height 100%

    .q-date__header
      border-bottom-left-radius inherit
      min-width 110px
      width 110px

    .q-date__header-title
      flex-direction column
    .q-date__header-today
      margin-top 12px
