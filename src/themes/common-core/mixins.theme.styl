activeColor($color)
  if luminosity($color) > .29
    darken($color, 10%)
  else
    lighten($color, 30%)

hoverColor($color)
  if luminosity($color) > .29
    darken($color, 6%)
  else
    lighten($color, 15%)

strongActiveColor($color)
  if luminosity($color) > .29
    darken($color, 20%)
  else
    lighten($color, 80%)

upsideColor($color)
  if luminosity($color) > .49
    black
  else
    white
