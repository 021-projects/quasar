$button-icon-margin         ?= .5rem

/*
 * Size small
 */
$button-small-font-size     ?= .8rem
$button-small-icon-size     ?= (1.5 * $button-small-font-size)
$button-small-padding       ?= 0 .9rem
$button-small-min-height    ?= 2.1rem

/*
 * Size default
 */
$button-font-size           ?= .9rem
$button-icon-size           ?= (1.5 * $button-font-size)
$button-padding             ?= 0 1.1rem
$button-min-height          ?= 2.8rem

/*
 * Size big
 */
$button-big-font-size       ?= 1rem
$button-big-icon-size       ?= (1.3 * $button-big-font-size)
$button-big-padding         ?= 0 1.4rem
$button-big-min-height      ?= 3.2rem
