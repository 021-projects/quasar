$chat-font-weight                    ?= 300
$chat-date-color                     ?= #a6a6a6
$chat-date-font-size                 ?= .8rem
$chat-message-font-size              ?= 1rem
$chat-message-you-color              ?= #fff
$chat-message-other-color            ?= #fff
$chat-message-you-background-color   ?= $primary
$chat-message-other-background-color ?= $secondary
$chat-box-shadow                     ?= none

.chat-you
  .chat-date
    margin -20px 25px 0 0
  .chat-message p:after
    margin 7px -15px 0 0
    border-top 10px solid transparent
    border-bottom 10px solid transparent
    border-left 17px solid $chat-message-you-background-color

.chat-other
  .chat-date
    margin -20px 0 0 25px
  .chat-message p:after
    margin 7px 0 0 -15px
    border-top 10px solid transparent
    border-bottom 10px solid transparent
    border-right 17px solid $chat-message-other-background-color
