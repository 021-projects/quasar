button, .quasar-button
  @extend .non-selectable, .row, .justify-center, .items-center
  @extend .content-center, .no-wrap, .inline

  outline 0
  border 0
  cursor pointer
  text-decoration none
  white-space nowrap
  position relative
  font-style normal
  text-overflow ellipsis
  overflow hidden
  text-align center
  vertical-align middle
  flex-shrink(0)
  background-color transparent
  line-height 1
  transition all .12s ease-in

  border-radius $button-border-radius
  box-shadow $button-box-shadow
  text-transform $button-text-transform

  margin $button-margin
  padding $button-padding
  min-height $button-min-height

  font-weight $button-font-weight
  font-size $button-font-size

  i
    font-size $button-icon-size
    &.float-left
      margin-right $button-icon-margin
    &.float-right
      margin-left $button-icon-margin

  font-size $button-font-size
  padding $button-padding
  min-height $button-min-height

  &.small
    font-size $button-small-font-size
    padding $button-small-padding
    min-height $button-small-min-height
    i
      font-size $button-small-icon-size
  &.big
    font-size $button-big-font-size
    padding $button-big-padding
    min-height $button-big-min-height
    i
      font-size $button-big-icon-size

  &.clear
    box-shadow none !important
    background-color transparent !important
    transition none

  &.round
    border-radius 64px
    padding 0 2.6rem

  &.raised
    box-shadow $shadow-4
    &:hover:not(.disabled)
      box-shadow $shadow-6
    &:active:not(.disabled)
      box-shadow $shadow-8

  /**
   * COLORS
   */
  for $name, $color in $colors
    &.{$name}
      color white
      background-color $color

      &:active:not(.disabled)
        background-color activeColor($color)
      &.inverted, &.outline
        color $color
        background-color transparent
        &:active:not(.disabled)
          color white
          background-color $color
      &.outline
        border 1px solid $color
      &.clear
        color $color
      &.clear:active:not(.disabled)
        color activeColor($color)

  &.light
    color $dark !important

  /* circular shape */
  &.circular
    border-radius 50%
    padding 0
    height 56px
    width 56px
    font-size 20px
    line-height 18px
    &.small
      height 37px
      width 37px
      font-size 17px
      line-height 18px
    &.big
      height 72px
      width 72px
      line-height 32px
      font-size 32px

  &.block, &.full-width
    margin-left 0
    margin-right 0
