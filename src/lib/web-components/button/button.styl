button, .button
  @extend .non-selectable

  display inline-flex
  flex-direction row
  justify-content center
  align-items center
  align-content center
  flex-wrap nowrap
  flex-shrink 0

  outline 0
  border 0
  cursor pointer
  text-decoration none
  white-space nowrap
  position relative
  font-style normal
  text-overflow ellipsis
  overflow hidden
  text-align center
  vertical-align middle
  background-color transparent
  line-height 1
  transition all .12s ease-in

  border-radius $button-border-radius
  text-transform $button-text-transform

  margin $button-margin
  padding $button-padding
  min-height $button-min-height

  font-weight $button-font-weight
  font-size $button-font-size

  i
    font-size $button-icon-size
    &.float-left
      margin-right $button-icon-margin
    &.float-right
      margin-left $button-icon-margin

  &.small
    font-size $button-small-font-size
    padding $button-small-padding
    min-height $button-small-min-height
    i
      font-size $button-small-icon-size
  &.big
    font-size $button-big-font-size
    padding $button-big-padding
    min-height $button-big-min-height
    i
      font-size $button-big-icon-size

  &.round
    border-radius 64px
    padding 0 2.6rem

  &.raised
    box-shadow $shadow-2
    &:active:not(.disabled)
      box-shadow $shadow-3

  /**
   * COLORS
   */
  for $name, $color in $colors
    &.{$name}
      color white
      background-color $color

      &:active:not(.disabled)
        background-color active-color($color) !important
      &.outline
        border 1px solid $color
      &.glossy
        border 1px solid
        border-color darken($color, 10%) darken($color, 15%) darken($color, 15%)
        background-image linear-gradient(to bottom, rgba(white, .3), rgba(white, 0) 50%, rgba(black, .12) 51%, rgba(black, .04))
        &:active:not(.disabled)
          background darken($color, 5%)
          border-color darken($color, 25%) darken($color, 20%) darken($color, 10%)
          box-shadow inset 0 1px 3px rgba(black, .2), 0 1px rgba(white, .4)
          background-image linear-gradient(to bottom, darken($color, 13%), lighten($color, 5%))

      &.clear, &.outline
        color $color
        background-color transparent
        &:active:not(.disabled)
          color white
          background-color $color !important

  &.clear
    border-radius 0

  &.light
    color $dark !important

  /* circular shape */
  &.circular
    border-radius 50%
    padding 0
    height 56px
    width 56px
    font-size 20px
    line-height 18px
    &.small
      height 37px
      width 37px
      font-size 17px
      line-height 18px
    &.big
      height 72px
      width 72px
      line-height 32px
      font-size 32px

  &.block, &.full-width
    margin-left 0
    margin-right 0

body.desktop
  button, .button
    &.raised
      &:hover:not(.disabled)
        box-shadow $shadow-3

    for $name, $color in $colors
      &.{$name}:not(.disabled)
        &:hover:not(.clear):not(.glossy)
          background-color hover-color($color)
          box-shadow $button-box-shadow
        &.clear:hover
          background-color lighten($color, 70%)
        &.outline:hover
          color white
