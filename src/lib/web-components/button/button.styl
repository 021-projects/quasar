
$button-colors = neutral $neutral,
                 primary $primary,
                 secondary $secondary,
                 tertiary $tertiary,
                 positive $positive,
                 negative $negative,
                 warning $warning,
                 info $info,
                 light $white,
                 dark $black

$button-radius = 4px

button, .quasar-button
  @extend .non-selectable
  @extend .uppercase

  display inline-block
  outline 0
  cursor pointer
  border none
  background-image none
  text-shadow none
  font-weight normal
  font-style normal
  text-align center
  text-decoration none
  white-space nowrap
  vertical-align middle
  border-radius $button-radius
  transition all .12s ease-in
  margin 15px 0
  color $neutral-text
  background-color transparent

  &.cornered
    border-radius 0

  & + &
    margin-left 8px

  &:active:not(.disabled):not(.default)
    @extend .z-4

  &.raised
    @extend .z-4
    &:hover:not(.disabled)
      @extend .z-6
    &:active:not(.disabled)
      @extend .z-8

  &:active:not(.disabled)
    background-color activeColor(white)

  /**
   * COLORS
   */
  for $color in $button-colors
    &.{$color[0]}
      color white
      background-color $color[1]
      &:hover:not(.disabled), &:active:not(.disabled)
        background-color activeColor($color[1])
      &.inverted, &.bordered
        color $color[1]
        background-color white
        &:hover:not(.disabled), &:active:not(.disabled)
          color white
          background-color $color[1]
      &.bordered
        border 2px solid $color[1]
  &.neutral
    color $neutral-text !important
  &.light
    color black !important
    &.inverted
      color white !important
      background-color black
      &:hover:not(.disabled), &:active:not(.disabled)
        color black !important
        background-color white

  /* default shape */
  &:not(.circular)
    min-width 64px
    padding 0 15px
    height 47px
    line-height 43px
    i
      margin 0 10px
      font-size 1.7em
    &.small
      padding 0 15px
      height 36px
      line-height 34px
      i
        font-size 1.5em
    &.big
      padding 0 25px
      height 62px
      line-height 58px
      i
        font-size 2.1em

  /* circular shape */
  &.circular
    @extend .layout, .layout.inline, .layout.items-center, .layout.justify-center
    border-radius 50%
    padding 0
    height 56px
    width 56px
    font-size 20px
    line-height 18px
    &.small
      height 37px
      width 37px
      font-size 17px
      line-height 18px
    &.big
      height 72px
      width 72px
      line-height 32px
      font-size 32px
