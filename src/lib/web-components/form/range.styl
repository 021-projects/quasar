.quasar-range
  margin 10px 0
  width 100%
  height 40px
  position relative
  cursor pointer

  &:before
    content ''
    position absolute
    top 16px
    height 5px
    width 100%
    background-color $grey-400
    border-radius 10px
    transition background .3s ease

  .quasar-range-picker
    position absolute
    top 2px
    left 0
    width 31px
    height 31px
    background-color #F1F1F1
    border-radius 21px
    box-shadow 0 1px 3px 1px rgba(0,0,0,0.4)

  .quasar-range-tooltip
    position absolute
    top -41px
    color white
    background-color $grey-500
    border-radius 5px
    padding 6px
    display none

  &.active
    &:before
      background-color $primary
    .quasar-range-tooltip
      display block
