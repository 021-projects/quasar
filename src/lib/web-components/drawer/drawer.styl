
$drawer-width = 300px
$drawer-separator-color = #ECECEC

body.inactive.with-drawer:after
  z-index $z-drawer - 1

.quasar-drawer-content
  z-index $z-drawer
  position fixed
  top 0
  left 0
  bottom 0
  width $drawer-width
  transform translateX(-100%)
  background-color $white
  border-right 1px solid $drawer-separator-color

  .quasar-drawer-cover
    width 100%
    border-bottom 1px solid $drawer-separator-color
    padding 16px 16px 8px 16px
    margin-bottom 8px
  .quasar-icon
    opacity .54
    float left
    color lighten($black, 13%)
    margin-right 16px
  .quasar-drawer-item
    cursor pointer
    transition all .3s
    &:hover
      background-color $grey-300
  .quasar-drawer-divider
    margin 8px 0
    height 1px
    background-color $drawer-separator-color
    border 0
    padding 0
  .quasar-drawer-header
    color lighten($black, 45%)

  .quasar-drawer-item, .quasar-drawer-header
    font-weight 500
    height 48px
    padding 8px 16px
    line-height 16px
    font-size 16px

.quasar-drawer-opener
  position fixed
  top 0
  left 0
  bottom 0
  height 100%
  width 15px

@media screen and (max-width: $largestMobileScreen - 1)
  .quasar-drawer-content
    top 0 !important

@media screen and (min-width: $largestMobileScreen)
  body.with-drawer
    .quasar-page
      padding 20px
    &.inactive
      overflow auto
      &:after
        position inherit
    .quasar-drawer-toggle
      display none
    .quasar-drawer-content
      transform translateX(0) !important
      outline 0 !important
    .quasar-layout
      margin-left $drawer-width !important
      .quasar-header.fixed-top
        z-index 20 !important
