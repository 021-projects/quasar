html, body, #quasar-app
  height 100%
  width 100%

.quasar-screen .quasar-pages
  @extend .auto
  position relative

.quasar-page-container
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  overflow auto

.quasar-screen-header
  border-bottom $screen-marginals-border
  border-bottom-style $screen-marginals-border-style
  border-bottom-color $screen-marginals-border-color

.quasar-screen-footer
  border-top $screen-marginals-border
  border-top-style $screen-marginals-border-style
  border-top-color $screen-marginals-border-color

.quasar-screen-header, .quasar-screen-footer
  z-index $z-marginals
  background-color $screen-marginals-background-color
  font-weight $screen-marginals-font-weight

  > .row
    min-height $screen-marginals-row-min-height
    color $screen-marginals-color
    transition color .18s ease-in, box-shadow .18s ease-in

  .group
    @extend .row.inline
    margin-left 10px
    margin-right 10px
    button
      padding-left 15px
      padding-right 15px

  p
    @extend .text-truncate, .text-center, .auto
    margin 0
    font-size 1.4rem
    line-height 1.2
    &:first-child
      margin-left 15px
    &:last-child
      margin-right 15px

.smart-container .quasar-page
  padding 2rem 0

@media only screen and (max-width $layout-small-max)
  .smart-container .quasar-page
    padding 1rem .5rem
@media only screen and (min-width $layout-medium-min) and (max-width $layout-medium-max)
  .smart-container .quasar-page
    width 95%
    max-width $layout-medium-min
    padding-left 1rem
@media only screen and (min-width $layout-big-min) and (max-width $layout-big-max)
  .smart-container .quasar-page
    width 85%
    max-width $layout-medium-min
    padding-left 3rem
@media only screen and (min-width $layout-large-min)
  .smart-container .quasar-page
    width 85%
    max-width $layout-big-min
    padding-left 4rem
