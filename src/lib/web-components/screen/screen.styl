html, body, #quasar-app
  height 100%
  width 100%

.screen .quasar-pages
  @extend .auto
  position relative
  overflow hidden

.quasar-page-container
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  overflow auto

.screen-header
  order -10
.screen-footer
  order 10
.screen-navigation
  order $screen-navigation-order

if $theme == 'ios'
  .screen-content
    border-top $ios-screen-content-border
    border-bottom $ios-screen-content-border

.screen-header, .screen-footer, .screen-navigation
  z-index $z-marginals
  font-size $screen-marginals-font-size
  background-color $screen-marginals-background-color
  font-weight $screen-marginals-font-weight
  color $screen-marginals-color
  transition color .18s ease-in, box-shadow .18s ease-in

  > .row
    min-height (1.7 * $screen-marginals-font-size)

  .group
    @extend .row.inline
    margin-left 10px
    margin-right 10px
    button
      padding-left 15px
      padding-right 15px

  .spacer
    @extend .auto

  p
    @extend .text-truncate, .text-center, .auto
    margin 0
    font-size 1.4rem
    line-height 1.2
    &:first-child
      margin-left 15px
    &:last-child
      margin-right 15px

  button i
    font-size (1.5 * $screen-marginals-font-size)

/*
 * Screen Navigation
 */

.screen-navigation
  min-height 2rem

  &:not(.scrollable)
    .left-scroll, .right-scroll
      display none !important

  .left-scroll, .right-scroll
    height 100%
    min-width 35px
    font-size 1.8rem
    cursor pointer

    if $theme == 'mat'
      border-bottom $mat-screen-navigation-link-border-bottom
    if $theme == 'ios'
      &:not(.disabled)
        color $ios-screen-navigation-link-active-color

  if $theme == 'ios'
    @extend .justify-center
    color $ios-screen-navigation-link-color


.screen-navigation-scroller
  overflow hidden

.screen-navigation-link
  min-height 55px
  padding $screen-navigation-link-padding
  cursor pointer
  transition all .3s
  white-space nowrap

  &.active
    opacity $screen-navigation-link-active-opacity
  &:active
    background-color $screen-navigation-link-active-background-color

  if $theme == 'mat'
    @extend .row
    opacity $mat-screen-navigation-link-opacity
    text-transform $mat-screen-navigation-link-text-transform
    border-bottom $mat-screen-navigation-link-border-bottom

    &.active
      opacity $mat-screen-navigation-link-active-opacity
      border-bottom $mat-screen-navigation-link-active-border-bottom
    i
      display none !important

  if $theme == 'ios'
    @extend .column
    &.active
      color $ios-screen-navigation-link-active-color
    i
      font-size $ios-screen-navigation-link-icon-font-size
      margin-bottom $ios-screen-navigation-link-icon-margin-bottom

@media only screen and (max-width $layout-medium-max)
  .screen-navigation:not(.scrollable)
    .screen-navigation-scroller, .screen-navigation-link
      flex 1 1 auto

@media only screen and (min-width $layout-big-min)
  .screen-navigation-link
    padding-left (3 * $screen-navigation-link-padding[1])
    padding-right (3 * $screen-navigation-link-padding[1])


/*
 * Smart Page Container
 */

.smart-container .quasar-page
  padding 2rem 0

@media only screen and (max-width $layout-small-max)
  .smart-container .quasar-page
    padding 1rem .5rem
@media only screen and (min-width $layout-medium-min) and (max-width $layout-medium-max)
  .smart-container .quasar-page
    width 95%
    max-width $layout-medium-min
    padding-left 1rem
@media only screen and (min-width $layout-big-min) and (max-width $layout-big-max)
  .smart-container .quasar-page
    width 85%
    max-width $layout-medium-min
    padding-left 3rem
@media only screen and (min-width $layout-large-min)
  .smart-container .quasar-page
    width 85%
    max-width $layout-big-min
    padding-left 4rem
