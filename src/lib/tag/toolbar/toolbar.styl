$toolbar-row-height = 64px

.quasar-toolbar
  display block
  box-sizing border-box
  background-color $primary
  color white
  font-size 20px
  font-weight 500
  line-height 1
  transition color .18s ease-in, box-shadow .18s ease-in

  &.cover
    background-repeat no-repeat
    background-size cover
    background-position center center

  &.shadow
    @extend .shadow-4dp

  .quasar-toolbar-row
    height $toolbar-row-height
    padding 0 16px

    .quasar-toolbar-title
      margin-left 10px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      padding 8px 0
      height 40px

    .button
      border 0
      padding 8px
      width 40px
      height 40px
      border-radius $radius
      background-color transparent

  .quasar-toolbar-navigation
    background-color $secondary
    .quasar-toolbar-tab
      transition all .2s
      color $primary
      &.active
        border-bottom 5px solid $primary
