#__quasar_notifiers
  position fixed
  z-index $z-notifier

  .quasar-notifier
    opacity 0.9
    float right
    margin-bottom 5px
    will-change transform
    color white
    background-color $grey-600
    font-size 14px

    a
      color $yellow

    > *
      margin 5px

    > .quasar-icon
      font-size 1.5em

    .quasar-notifier-dismiss-all
      display none
      font-size 1.7em
      padding 5px
      color $grey-200
      margin-right 0
      border-radius 7px
      background-color $grey-800

    &:first-of-type
      .quasar-notifier-dismiss-all
        display inherit

@media (min-width: $tabletBreakpoint)
  #__quasar_notifiers
    top 50px
    right 16px
    pointer-events none

    .quasar-notifier
      pointer-events all
      border-radius 5px
      max-width 700px
      padding 5px 16px

@media (max-width: $largestMobileScreen)
  #__quasar_notifiers
    left 0
    right 0
    bottom 0

    .quasar-notifier
      padding 10px 16px
      min-width 100%
      float left
      border 0
      border-radius 0
      margin-bottom 0
      -webkit-justify-content space-between
      justify-content space-between
      box-shadow 0 4px 5px 0 rgba(0, 0, 0, .84), 0 1px 10px 0 rgba(0, 0, 0, .62), 0 2px 4px -1px rgba(0, 0, 0, .44)
