@require helpers

.grid
  display -ms-flexbox // @stylint ignore
  display -webkit-flex // @stylint ignore
  display flex

  /**
   * Helpers
   */
  &.full-width
    > *
      -ms-flex 1
      -webkit-flex 1
      flex 1

  &.small-gutter
    margin -.5em 0 .5em -.5em
    > *
      padding .5em 0 0 .5em

  &.gutter
    margin -1em 0 1em -1em
    > *
      padding 1em 0 0 1em

  &.big-gutter
    margin -2em 0 2em -2em
    > *
      padding 2em 0 0 2em

  &.huge-gutter
    margin -3em 0 3em -3em
    > *
      padding 3em 0 0 3em

  > *
    for $cols in (1..7)
      for $parts in (1..$cols)
        &.width-{$parts}of{$cols}
          flex 0 0 ($parts / $cols * 100)%

  &.responsive
    -ms-flex-wrap wrap
    -webkit-flex-wrap wrap
    flex-wrap wrap
    > *
      -ms-flex 0 0 100%
      -webkit-flex 0 0 100%
      flex 0 0 100%
      @media (min-width 48em)
        -ms-flex 1
        -webkit-flex 1
        flex 1

  &.horizontal
    -ms-flex-direction row
    -webkit-flex-direction row
    flex-direction row
  &.horizontal-reverse
    -ms-flex-direction row-reverse
    -webkit-flex-direction row-reverse
    flex-direction row-reverse

  &.vertical
    -ms-flex-direction column
    -webkit-flex-direction column
    flex-direction column
  &.vertical-reverse
    -ms-flex-direction column-reverse
    -webkit-flex-direction column-reverse
    flex-direction column-reverse


  &.wrap
    -ms-flex-wrap wrap
    -webkit-flex-wrap wrap
    flex-wrap wrap
  &.wrap-reverse
    -ms-flex-wrap wrap-reverse
    -webkit-flex-wrap wrap-reverse
    flex-wrap wrap-reverse
  &.nowrap
    -ms-flex-wrap nowrap
    -webkit-flex-wrap nowrap
    flex-wrap nowrap


  +prefix-classes('horizontal-')
    &.left
      -webkit-justify-content flex-start
      justify-content flex-start
    &.right
      -webkit-justify-content flex-end
      justify-content flex-end
    &.center
      -webkit-justify-content center
      justify-content center
    &.between
      -webkit-justify-content space-between
      justify-content space-between
    &.around
      -webkit-justify-content space-around
      justify-content space-around


  +prefix-classes('vertical-')
    &.top
      -webkit-align-items flex-start
      align-items flex-start
    &.bottom
      -webkit-align-items flex-end
      align-items flex-end
    &.center
      -webkit-align-items center
      align-items center
    &.stretch
      -webkit-align-items stretch
      align-items stretch
    &.baseline
      -webkit-align-items baseline
      align-items baseline


  +prefix-classes('content-')
    &.top
      -webkit-align-content flex-start
      align-content flex-start
    &.bottom
      -webkit-align-content flex-end
      align-content flex-end
    &.center
      -webkit-align-content center
      align-content center
    &.stretch
      -webkit-align-content stretch
      align-content stretch
    &.baseline
      -webkit-align-content baseline
      align-content baseline


  /**
   * For CHILDREN
   */

  for i in 1..12
    .order-{i}
      -webkit-order i
      order i
    .flex-{i}
      -ms-flex i
      -webkit-flex i
      flex i
    .grow-{i}
      -webkit-flex-grow i
      flex-grow i
    .shrink-{i}
      -webkit-flex-shrink i
      flex-shrink i

  .full-width
    -ms-flex 1 1 .000000001px
    -webkit-flex 1
    flex 1
    -webkit-flex-basis .000000001px
    flex-basis .000000001px
  .basis-0
    -webkit-flex-basis 0
    flex-basis 0

  .full-height
    display -ms-flexbox // @stylint ignore
    display -webkit-flex // @stylint ignore
    display flex

  +prefix-classes('self-')
    .top
      -webkit-align-self flex-start
      align-self flex-start
    .bottom
      -webkit-align-self flex-end
      align-self flex-end
    .center
      -webkit-align-self center
      align-self center
    .stretch
      -webkit-align-self stretch
      align-self stretch
    .baseline
      -webkit-align-self baseline
      align-self baseline
