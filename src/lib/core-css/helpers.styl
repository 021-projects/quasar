
.transparent
  opacity .95

.scroll
  -webkit-overflow-scrolling touch
  overflow auto

.window-height
  margin 0
  height 100vh


.fixed-bottom,
.fixed-left,
.fixed-right,
.fixed-top
  position fixed

.absolute-bottom,
.absolute-left,
.absolute-right,
.absolute-top
  position absolute

.fixed-top, .absolute-top
  top 0
  left 0
  right 0

.fixed-right, .absolute-right
  top 0
  right 0
  bottom 0

.fixed-bottom, .absolute-bottom
  right 0
  bottom 0
  left 0

.fixed-left, .absolute-left
  top 0
  bottom 0
  left 0
