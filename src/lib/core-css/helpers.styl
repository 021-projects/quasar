@require shadows

.non-selectable
  -moz-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none

.scroll
  -webkit-overflow-scrolling touch
  overflow auto

.no-scroll
  overflow hidden !important

.inactive
  overflow hidden
  &:after
    content ''
    position fixed
    top 0
    left 0
    right 0
    bottom 0

.inline
  display -ms-inline-flexbox !important // @stylint ignore
  display -webkit-inline-flex !important // @stylint ignore
  display inline-flex !important // @stylint ignore

.background-cover
  background-repeat no-repeat
  background-size cover
  background-position center center

.fit
  width 100%
  height 100%
.full-height
  height 100%
.full-width
  width 100%
.window-height
  margin-top 0
  margin-bottom 0
  height 100vh
.window-width
  margin-left 0
  margin-right 0
  width 100vw


.hoverable
  transition box-shadow $hoverable-transition-time
  &:hover
    $hoverable-shadow

.round-borders
  border-radius 5px

.disabled
  opacity .6
  cursor not-allowed

.hidden
  display none !important

.invisible
  visibility hidden

.transparent
  opacity $overlay-opacity

.fixed-bottom,
.fixed-left,
.fixed-right,
.fixed-top
  position fixed

.absolute-bottom,
.absolute-left,
.absolute-right,
.absolute-top
  position absolute

.fixed-top, .absolute-top
  top 0
  left 0
  right 0

.fixed-right, .absolute-right
  top 0
  right 0
  bottom 0

.fixed-bottom, .absolute-bottom
  right 0
  bottom 0
  left 0

.fixed-left, .absolute-left
  top 0
  bottom 0
  left 0

.overlay
  position fixed
  top 0
  right 0
  bottom 0
  left 0

+prefix-classes('float-')
  .left
    float left
  .right
    float right
