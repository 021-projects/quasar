
.non-selectable
  -moz-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none

.scroll
  -webkit-overflow-scrolling touch
  overflow auto

.no-scroll
  overflow hidden !important

.inactive
  overflow hidden
  &:after
    content ''
    position fixed
    top 0
    left 0
    right 0
    bottom 0

.window-height
  margin 0
  height 100vh

+prefix-classes('text-')
  .center
    text-align center
  .left
    text-align left
  .right
    text-align right
  .justify
    text-align justify
    hyphens auto

.hidden
  display none

.invisible
  visibility hidden

.transparent
  opacity $opacity

.fixed-bottom,
.fixed-left,
.fixed-right,
.fixed-top
  position fixed

.absolute-bottom,
.absolute-left,
.absolute-right,
.absolute-top
  position absolute

.fixed-top, .absolute-top
  top 0
  left 0
  right 0

.fixed-right, .absolute-right
  top 0
  right 0
  bottom 0

.fixed-bottom, .absolute-bottom
  right 0
  bottom 0
  left 0

.fixed-left, .absolute-left
  top 0
  bottom 0
  left 0


+prefix-classes('float-')
  .left
    float left
  .right
    float right
