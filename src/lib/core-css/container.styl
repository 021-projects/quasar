
@require variables

body, #quasar-app, .quasar-page, .quasar-container
  height 100%
.quasar-container
  margin 0 auto

@media only screen and (max-width $layout-small-max)
  .quasar-container
    width auto
    margin 0 $em-size
@media only screen and (min-width $layout-medium-min) and (max-width $layout-medium-max)
  .quasar-container
    width $layout-small - ($em-size * 2) - $scrollbar-width !important
@media only screen and (min-width $layout-big-min) and (max-width $layout-big-max)
  .quasar-container
    width $layout-medium - ($em-size * 2) - $scrollbar-width
@media only screen and (min-width $layout-large-min)
  .quasar-container
    width $layout-big - ($em-size * 2) - $scrollbar-width

.quasar-container
  display block
  max-width 100% !important
